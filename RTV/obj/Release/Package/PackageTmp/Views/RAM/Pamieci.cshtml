@model IEnumerable<RTV.Models.RAM>
@using GridMvc.Html

@{
    Layout = null;
}

@{
    ViewBag.Title = "Pamięci RAM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<img class="img-responsive" src="~/Content/RAM.jpg" style="width:100%;">
<h2>Pamięci RAM</h2>

<p>
    @Html.ActionLink("< Pełna lista kategorii", "Index", "Product")

</p>


@Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Nazwa).Titled("Nazwa").Filterable(true);
    columns.Add(c => c.Marka).Titled("Marka").Filterable(true);
    columns.Add(c => c.Opis).Titled("Opis").Filterable(true);
    columns.Add(c => c.Chlodzenie).Titled("Chlodzenie").Filterable(true).RenderValueAs(data => data.Chlodzenie ? "Tak" : "Nie");
    columns.Add(c => c.Czestotliwosc).Titled("Czestotliwosc").Filterable(true);
    columns.Add(c => c.Moduly).Titled("Moduly").Filterable(true);
    columns.Add(c => c.Napiecie).Titled("Napiecie").Filterable(true);
    columns.Add(c => c.Opoznienie).Titled("Opoznienie").Filterable(true);
    columns.Add(c => c.Pojemnosc).Titled("Pojemnosc").Filterable(true);
    columns.Add(c => c.Typ).Titled("Typ").Filterable(true);
    columns.Add(c => c.Stan).Titled("Stan").Filterable(true);
    columns.Add(c => c.Cena).Titled("Cena").Filterable(true);
    columns.Add(c => c.Sprzedany).Titled("Sprzedany").Filterable(true).RenderValueAs(data => data.Sprzedany ? "Tak" : "Nie");
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink("Edytuj", "Edit", "RAM", new { id = o.RAMId }, null));
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink("Usuń", "Delete", "RAM", new { id = o.RAMId }, null));
    //      columns.Add(model => model.UserName).Titled("Name")
    //.Filterable(true).Sanitized(false).Encoded(false).
    //  RenderValueAs(o => Html.ActionLink(o.UserName, "Edit", "Admin", new { Id = o.UserId }, null).ToHtmlString()); ;
}).WithPaging(20).Sortable(true).WithMultipleFilters().EmptyText("Brak rekordów")
